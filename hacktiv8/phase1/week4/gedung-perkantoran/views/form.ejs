<!DOCTYPE html>
<html>
  <% include ./partials/header %>
  <body class="container">
    <header>
      <h4><%=title%></h4>
    </header>
    <main>
      <div class="row">
        <form class="col s12" action="<%=action%>" method="post">
            <div class="input-field col s12">
              <i class="material-icons prefix">today</i>
              <input type="text" placeholder="Nama Kantor" name="nama" required>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">perm_contact_calendar</i>
              <input type="text" placeholder="Jumlah Karyawan" name="jumlah_karyawan" required>
            </div>
            <label>Gedung</label>
            <select class="browser-default" name="gedung_id">
              <option value="" disabled selected>Select</option>
              <% gedung.forEach ( (element) => { %>
              <option value="<%=element.id%>"><%= element.nama %></option>
              <% }) %>
            </select>
          <input type="submit" value="Submit" class="waves-effect waves-light btn blue">
        </form>
      </div>
    </main>
    <footer >
      <br>
      <br>
      <div class="row">
        <a class="btn red" href="http://localhost:3000">index</a>
      </div>
    </footer>
  </body>
</html>
